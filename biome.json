{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "globals": ["it", "describe", "expect", "jest", "beforeEach", "afterAll"]
  },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/main/**",
      "**/out/**",
      "**/coverage/**",
      "**/build/**",
      "**/playwright-report/**",
      "**/blob-report/**",
      "**/playwright/.cache/**",
      "package.json"
    ]
  }
}
